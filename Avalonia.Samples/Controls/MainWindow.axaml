<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Controls.MainWindow"
        Title="Controls">

    <StackPanel Margin="20">
        <Button x:Name="buttonModalWindow" Click="buttonModalWindow_Click">Open Modal Window</Button>
        <Button x:Name="buttonButtonControls" Click="buttonButtonControls_Click">Open Button Controls</Button>
        <TextBlock Margin="0 10" x:Name="textBlockMessage">Ready...</TextBlock>
    </StackPanel>

</Window>
